@{
    Layout = null;
}

<!DOCTYPE html>

<html ng-app="genAnswerApp">
<head>
    <meta name="viewport" content="width=device-width" />
    <title><span translate="hBuilder"></span></title>
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.1/css/materialize.min.css">
</head>
<body ng-controller="genAnswerCtrl">
    <div class="card">
        <div class="card-image waves-effect waves-block waves-light">
            <img class="activator" src="http://www.itop.freewallpaper-s.net/wp-content/uploads/wallpapers/Office-keyboard-mouse-mug-computer-objects-top-hd-wallpapers-3840x2160.jpg">
        </div>
        <div class="card-content">
            <span class="card-title activator grey-text text-darken-4"><span translate="hBuilder"></span><i class="material-icons right">more_vert</i></span>
            <p><a href="#" ng-click="start()"><span translate="createNow"></span>!</a></p>
        </div>
        <div class="card-reveal">
            <span class="card-title grey-text text-darken-4"><span translate="hBuilder"></span><i class="material-icons right"><span translate="close"></span></i></span>
            <p><span translate="justClick"></span></p>
        </div>
    </div>
    <!-- Modal Structure -->
    <div id="modal1" class="modal">
        <div class="modal-content">
            <span translate="creating"></span>... {{percent}}%
            <div class="progress">
                <div class="determinate" style="width: {{percent}}%"></div>
            </div>
        </div>
        <div class="modal-footer">
            <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat" ng-click="cancel()"><span translate="canceled"></span>></a>
        </div>
    </div>


    <script src="~/Scripts/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/underscore.min.js"></script>
    <script src="~/Scripts/underscore.string.min.js"></script>
    <script src="~/Content/src/ploy/UnderScoreConfig.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.1/js/materialize.min.js"></script>
    <script src="~/Content/src/modules/Utility/GenAnswer/app.js"></script>
</body>
</html>
